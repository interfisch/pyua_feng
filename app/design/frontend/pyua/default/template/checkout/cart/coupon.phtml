<script type="text/javascript">
<!-- MIT DIESEM CODE KANN DIE STATUS MESSAGE ANGEPASST WERDEN... -->
if($j("#coupon_code").val() != ""){
    var CouponCode = $j("#coupon_code").val();
    switch(CouponCode){
        case 'Bruxn-SMJT':
        case 'SALE2015':
            var HTML = ""; 
            var MSG  = $j(".messages .success-msg ul li span").html();
            switch(MSG){
                case 'Gutscheincode "'+CouponCode+'" wurde abgebrochen. Gilt nicht für reduzierte Ware':
                    HTML = 'Gutscheincode "'+CouponCode+'" wurde abgebrochen.';
                break;
                case 'Der Gutscheincode "'+CouponCode+'" ist nicht mehr gültig und/oder nicht auf bereits reduzierte Produkte bzw. Aktions-Artikel anwendbar.':
                    HTML = 'Gutscheincode "'+CouponCode+'" ist nicht mehr gültig.';
                break;
                case 'Der Gutscheincode "'+CouponCode+'" wurde eingelöst. ACHTUNG: Der Code ist nicht auf bereits reduzierte Produkte bzw. Aktions-Artikel anwendbar.':
                    HTML = 'Gutscheincode "'+CouponCode+'" wurde eingelöst.';
                break;
                default:
                    HTML = MSG;
            }
            $j(".messages .success-msg ul li span").html(HTML);
        break;
    }
}

